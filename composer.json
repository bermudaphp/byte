{
  "name": "bermudaphp/byte",
  "description": "A robust PHP class for working with data size units (bytes, kilobytes, megabytes, etc.)",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "bytes",
    "data-size",
    "file-size",
    "units",
    "conversion",
    "formatting"
  ],
  "autoload": {
    "psr-4": {
      "Bermuda\\Stdlib\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bermuda\\Stdlib\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
